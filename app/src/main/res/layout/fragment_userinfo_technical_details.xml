<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:padding="16dp"
              tools:context=".scenes.user_info.view.fragments.UserInfoTechnicalDetailsFragment"
              xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:padding="8dp">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_margin="8dp">

                <!-- Encode Person Results -->

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:textColor="@color/design_default_color_primary_dark"
                          android:text="@string/userinfo_technical_details_fragment_label_encode_person_process"/>

                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@android:color/darker_gray"/>

                <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                             android:stretchColumns="1">
                    <TableRow>
                        <TextView android:textColor="@android:color/holo_purple"
                                  android:text="@string/label_duration"/>

                        <TextView android:id="@+id/text_view_encode_duration"
                                  android:gravity="end"
                                  android:layout_weight="0.5"
                                  tools:text="10ms"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:textColor="@android:color/holo_purple"
                                  android:text="@string/label_error_code"/>

                        <TextView android:id="@+id/text_view_encode_error_code"
                                  android:gravity="end"
                                  android:layout_weight="0.5"
                                  tools:text="SUCCESS"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:textColor="@android:color/holo_purple"
                                  android:text="@string/label_message"/>

                        <TextView android:id="@+id/text_view_encode_message"
                                  android:gravity="end"
                                  android:layout_weight="0.5"
                                  tools:text="User encoded successfully in MBSS. Test for long messages"/>
                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:padding="8dp">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_margin="8dp">

                <!-- Encode Person Results -->

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:textColor="@color/design_default_color_primary_dark"
                          android:text="@string/userinfo_technical_details_fragment_label_authenticate_person_process"/>

                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@android:color/darker_gray"/>

                <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                             android:stretchColumns="1">
                    <TableRow>
                        <TextView android:textColor="@android:color/holo_purple"
                                  android:text="@string/label_duration"/>

                        <TextView android:id="@+id/text_view_authenticate_duration"
                                  android:gravity="end"
                                  android:layout_weight="0.5"
                                  tools:text="10ms"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:textColor="@android:color/holo_purple"
                                  android:text="@string/label_error_code"/>

                        <TextView android:id="@+id/text_view_authenticate_error_code"
                                  android:gravity="end"
                                  android:layout_weight="0.5"
                                  tools:text="SUCCESS"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:textColor="@android:color/holo_purple"
                                  android:text="@string/label_message"/>

                        <TextView android:id="@+id/text_view_authenticate_message"
                                  android:gravity="end"
                                  android:layout_weight="0.5"
                                  tools:text="User encoded successfully in MBSS. Test for long messages"/>
                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>