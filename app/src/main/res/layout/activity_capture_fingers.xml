<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scenes.capture_fingers.FingersCaptureActivity">

    <morpho.urt.msc.mscengine.MorphoSurfaceView
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/morpho_surface_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </morpho.urt.msc.mscengine.MorphoSurfaceView>


    <ImageView
            android:layout_width="155dp"
            android:layout_height="32dp"
            android:src="@drawable/idemia_logo_white_500px"
            android:contentDescription="@string/app_name"
            android:id="@+id/imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_view_feedback_info"
              android:textColor="@color/colorAccent"
              android:textSize="18sp"
              android:gravity="center"
              tools:text="Feedback info to display"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>


    <!--<android.support.design.button.MaterialButton
            android:id="@+id/button_finish"
            android:text="@string/label_finish_process"
            android:textSize="12sp"
            app:cornerRadius="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_feedback_info"
            android:elevation="8dp"
            android:textAlignment="center"/>-->

    <Switch
            android:text="@string/label_flash_on"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch_torch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_finish" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/button_finish"
    />
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_finish"
            app:fabSize="normal"
            android:src="@drawable/ic_ok"
            android:tint="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_countdown"
              android:textColor="@color/colorSuccess"
              android:gravity="center"
              android:textSize="50sp"
              tools:text="5s"
              app:layout_constraintEnd_toEndOf="@+id/morpho_surface_view" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/morpho_surface_view"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>