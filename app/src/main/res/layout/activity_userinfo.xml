<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              tools:context=".scenes.user_info.UserInfoActivity"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout android:layout_width="match_parent"
                                                android:gravity="center"
                                                android:id="@+id/app_bar_layout"
                                                android:layout_height="wrap_content"
                                                app:elevation="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view_photo"
                android:src="@drawable/ic_user"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:maxWidth="112dp"
                android:maxHeight="112dp"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_message_response"
                  android:textSize="16sp"
                  android:padding="8dp"
                  android:textColor="@android:color/white"
                  android:layout_gravity="center"
                  android:gravity="center"
                  tools:text="User identified successfully with id: IDEMIA"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="center"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabTextColor="@color/colorAccent"
            android:background="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager android:id="@+id/view_pager"
                                       android:layout_width="match_parent"
                                       android:layout_height="0dp"
                                       android:layout_weight="1"/>


    <FrameLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp">
        <android.support.design.button.MaterialButton
                android:id="@+id/button_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:cornerRadius="16dp"
                android:elevation="4dp"
                android:text="@string/label_finish_process"/>
    </FrameLayout>

</LinearLayout>