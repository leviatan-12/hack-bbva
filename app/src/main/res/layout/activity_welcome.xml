<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".scenes.welcome.WelcomeActivity">

    <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_square_logo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"/>

            <TextView
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    android:layout_weight="0.8"
                    android:id="@+id/text_view_app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="40sp"
                    android:layout_marginStart="16dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="16dp"
                      android:layout_marginEnd="16dp"
                      android:orientation="horizontal">

            <TextView
                    android:text="@string/welcome_label_license_status"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="8dp"
                      android:id="@+id/text_view_license_status"
                      tools:text="License Activated Successfully"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="16dp"
                      android:layout_marginEnd="16dp"
                      android:paddingBottom="4dp"
                      android:orientation="horizontal">

            <TextView
                    android:text="@string/welcome_label_sdk_version"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="8dp"
                      android:id="@+id/text_view_sdk_version"
                      tools:text="v4.13.0"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:background="@android:color/darker_gray"
              android:layout_marginTop="8dp"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:layout_marginBottom="8dp"
              android:layout_height="1dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="65dp">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:fabSize="normal"
            android:src="@drawable/ic_settings_white_36dp"
            app:layout_anchor="@id/bottom_app_bar"/>

    <android.support.design.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/colorPrimaryDark"
            app:fabAlignmentMode="end"/>

</android.support.design.widget.CoordinatorLayout>